<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.Chip.Filter"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="@style/TextAppearance.App.Chip"
    app:chipBackgroundColor="@color/chip_background_selector"
    app:chipStrokeColor="@color/showme_red"
    app:chipStrokeWidth="1dp"
    android:textColor="@color/chip_text_selector"
    app:chipIconVisible="true"
    app:chipIcon="@drawable/ic_show_24"
    app:chipIconTint="@color/chip_icon_selector"
    app:iconStartPadding="@dimen/no_margin"
    app:textStartPadding="@dimen/default_top_margin"
    app:textEndPadding="@dimen/no_margin"
    app:checkedIconVisible="false"
    tools:text="Concert"/>